FROM node:22-alpine AS build

WORKDIR /src
COPY package*.json ./

RUN npm install --force

COPY . .

RUN npx prisma db push --schema "./prisma/aihub-database/schema.prisma"
RUN npx prisma db push --schema "./prisma/filenest-database/schema.prisma"
RUN npx prisma db push --schema "./prisma/main-database/schema.prisma"
RUN npx prisma db push --schema "./prisma/telemedicine-database/schema.prisma"

RUN npm run build

# Production stage
FROM build AS production

COPY --from=build /src/.next ./.next
COPY --from=build /src/node_modules ./node_modules
COPY --from=build /src/package.json ./package.json
COPY --from=build /src/public ./public

CMD ["npm", "start"]