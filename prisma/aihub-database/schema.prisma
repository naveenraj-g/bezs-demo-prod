generator client {
    provider      = "prisma-client-js"
    output        = "../generated/ai-hub"
    binaryTargets = ["native", "windows", "linux-musl-openssl-3.0.x", "debian-openssl-1.1.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL_AI_HUB")
}

enum AiModelType {
    PRE_AVAILABLE
    CUSTOM
}

enum Status {
    ACTIVE
    INACTIVE
}

enum KnowledgeBasedType {
    VectorDB
    API
    KnowledgeGrass
    MCP
    Agents
    TextSQL
}

model Session {
    id     String @id @default(uuid())
    title  String @default("Untitled")
    userId String

    messages Message[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Message {
    id             String   @id @default(uuid())
    model          String
    rawHuman       String?
    rawAI          String?
    toolName       String?
    context        String?
    image          String?
    role           String?
    query          String?
    type           String?
    isGoodResponse Boolean?

    sessionId String
    session   Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model AiModel {
    id          String      @id @default(uuid())
    displayName String?     @unique
    modelName   String?
    tokens      String?
    type        AiModelType
    secretKey   String?
    modelUrl    String?

    defaultPrompt String @default("You are a helpful assistant.")
    maxToken      Int    @default(1000)
    temperature   Float  @default(0.5)
    topP          Float  @default(1)
    topK          Float  @default(5)

    modelSettings ModelSettings?
    assistant     Assistant[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([id])
}

model ModelSettings {
    id            Int    @id @default(autoincrement())
    defaultPrompt String @default("You are a helpful assistant.")
    maxToken      Int    @default(1000)
    temperature   Float  @default(0.5)
    topP          Float  @default(1)
    topK          Float  @default(5)

    modelId String  @unique
    model   AiModel @relation(fields: [modelId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Prompts {
    id          Int    @id @default(autoincrement())
    name        String
    description String
    status      Status @default(ACTIVE)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Assistant {
    id               Int    @id @default(autoincrement())
    name             String
    description      String
    greeting_message String
    prompt           String
    status           Status @default(ACTIVE)

    accessRoles    AccessRole[]
    knowledgeBased KnowledgeBased[]

    modelId String?
    model   AiModel? @relation(fields: [modelId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model AccessRole {
    id   Int    @id @default(autoincrement())
    name String

    assistantId Int
    assistant   Assistant @relation(fields: [assistantId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model KnowledgeBased {
    id Int @id @default(autoincrement())

    name        String
    type        KnowledgeBasedType
    connections String

    assistantId Int
    assistant   Assistant @relation(fields: [assistantId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
